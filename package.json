{
	"name": "wechat-online",
	"private": true,
	"version": "2.0.0",
	"packageManager": "pnpm@9.1.0",
	"scripts": {
		"dev": "pnpm -F @wechat-online/web run dev",
		"build": "pnpm -F @wechat-online/web run build",
		"biome:migrate": "biome migrate --write",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"check": "biome check .",
		"check:fix": "biome check --write --unsafe .",
		"release": "release-it"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@types/node": "^20.12.13",
		"release-it": "^17.3.0",
		"typescript": "^5.3.3"
	},
	"workspaces": ["packages/*"],
	"engines": {
		"node": ">=18"
	}
}
